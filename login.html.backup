<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión - Nexos</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="style.css">
    <link rel="icon" href="images/favicon.svg" type="image/svg+xml">
    <link rel="shortcut icon" href="images/favicon.svg" type="image/svg+xml">
    <style>
        .form-group {
            margin-bottom: 1.5rem;
        }
        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            color: var(--dark);
            font-weight: 500;
        }
        .form-input {
            width: 100%;
            padding: 0.9rem;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            font-size: 1rem;
            transition: border-color 0.3s;
        }
        .form-input:focus {
            outline: none;
            border-color: var(--primary);
        }
        .btn-primary {
            width: 100%;
            padding: 1rem;
            font-size: 1.1rem;
            background: var(--secondary);
            color: white;
            border: none;
            border-radius: 50px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }
        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        }
        .btn-type {
            padding: 1rem 2.5rem;
            border: 2px solid var(--primary);
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            min-width: 200px;
        }
        .btn-type.active {
            background: var(--primary);
            color: white;
        }
        .btn-type:not(.active) {
            background: white;
            color: var(--primary);
        }
        .tab-button {
            flex: 1;
            padding: 1rem;
            background: none;
            border: none;
            border-bottom: 3px solid transparent;
            color: #666;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }
        .tab-button.active {
            border-bottom-color: var(--primary);
            color: var(--primary);
        }
        .alert {
            padding: 1rem;
            border-radius: 10px;
            margin-bottom: 1rem;
            display: none;
        }
        .alert.success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        .alert.error {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar">
            <a href="index.html" class="logo">
                <i class="fas fa-heart"></i>
                <span>Nexos</span>
            </a>
            <ul class="nav-links">
                <li><a href="index.html">Inicio</a></li>
                <li><a href="subastas.html">Subastas</a></li>
                <li><a href="causas.html">Causas</a></li>
                <li><a href="empresas.html">Empresas</a></li>
                <li><a href="contacto.html">Contacto</a></li>
            </ul>
            <button class="cta-button" onclick="window.location.href='login.html'">Iniciar Sesión</button>
        </nav>
    </header>

    <section class="trending-section" style="padding: 4rem 5%; min-height: calc(100vh - 200px);">
        <h2 class="section-title">Bienvenido a Nexos</h2>
        <p style="text-align: center; color: #666; margin-bottom: 3rem; font-size: 1.1rem;">Selecciona tu tipo de cuenta para continuar</p>

        <!-- Selector de Tipo de Usuario -->
        <div style="display: flex; justify-content: center; gap: 2rem; margin-bottom: 3rem; flex-wrap: wrap;">
            <button onclick="mostrarFormulario('usuario')" id="btnUsuario" style="padding: 1rem 2.5rem; border: 2px solid var(--primary); background: var(--primary); color: white; border-radius: 50px; font-size: 1.1rem; font-weight: 600; cursor: pointer; transition: all 0.3s; min-width: 200px;">
                <i class="fas fa-user" style="margin-right: 0.5rem;"></i>Usuario
            </button>
            <button onclick="mostrarFormulario('empresa')" id="btnEmpresa" style="padding: 1rem 2.5rem; border: 2px solid var(--primary); background: white; color: var(--primary); border-radius: 50px; font-size: 1.1rem; font-weight: 600; cursor: pointer; transition: all 0.3s; min-width: 200px;">
                <i class="fas fa-building" style="margin-right: 0.5rem;"></i>Empresa/Organización
            </button>
        </div>

        <!-- Contenedor Principal -->
        <div style="max-width: 500px; margin: 0 auto;">
            
            <!-- FORMULARIO DE USUARIO -->
            <div id="formUsuario" style="background: white; padding: 3rem; border-radius: 20px; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);">
                <h3 style="color: var(--primary); text-align: center; margin-bottom: 2rem; font-size: 1.8rem;">
                    <i class="fas fa-user" style="margin-right: 0.5rem;"></i>Inicio de Sesión - Usuario
                </h3>

                <!-- Tabs de Login/Registro -->
                <div style="display: flex; margin-bottom: 2rem; border-bottom: 2px solid #e0e0e0;">
                    <button onclick="cambiarTab('loginUsuario')" id="tabLoginUsuario" style="flex: 1; padding: 1rem; background: none; border: none; border-bottom: 3px solid var(--primary); color: var(--primary); font-weight: 600; cursor: pointer; transition: all 0.3s;">
                        Iniciar Sesión
                    </button>
                    <button onclick="cambiarTab('registroUsuario')" id="tabRegistroUsuario" style="flex: 1; padding: 1rem; background: none; border: none; border-bottom: 3px solid transparent; color: #666; font-weight: 600; cursor: pointer; transition: all 0.3s;">
                        Registrarse
                    </button>
                </div>

                <!-- Login Usuario -->
                <form id="loginUsuarioForm" onsubmit="iniciarSesionUsuario(event)">
                    <div style="margin-bottom: 1.5rem;">
                        <label style="display: block; margin-bottom: 0.5rem; color: var(--dark); font-weight: 500;">
                            <i class="fas fa-envelope" style="margin-right: 0.5rem; color: var(--primary);"></i>Correo Electrónico
                        </label>
                        <input type="email" required style="width: 100%; padding: 0.9rem; border: 2px solid #e0e0e0; border-radius: 10px; font-size: 1rem; transition: border-color 0.3s;" onfocus="this.style.borderColor='var(--primary)'" onblur="this.style.borderColor='#e0e0e0'">
                    </div>

                    <div style="margin-bottom: 1.5rem;">
                        <label style="display: block; margin-bottom: 0.5rem; color: var(--dark); font-weight: 500;">
                            <i class="fas fa-lock" style="margin-right: 0.5rem; color: var(--primary);"></i>Contraseña
                        </label>
                        <input type="password" required style="width: 100%; padding: 0.9rem; border: 2px solid #e0e0e0; border-radius: 10px; font-size: 1rem; transition: border-color 0.3s;" onfocus="this.style.borderColor='var(--primary)'" onblur="this.style.borderColor='#e0e0e0'">
                    </div>

                    <div style="margin-bottom: 1.5rem; text-align: right;">
                        <a href="#" style="color: var(--primary); text-decoration: none; font-size: 0.9rem;">¿Olvidaste tu contraseña?</a>
                    </div>

                    <button type="submit" class="cta-button" style="width: 100%; padding: 1rem; font-size: 1.1rem; border: none;">
                        <i class="fas fa-sign-in-alt" style="margin-right: 0.5rem;"></i>Iniciar Sesión
                    </button>
                </form>

                <!-- Registro Usuario -->
                <form id="registroUsuarioForm" onsubmit="registrarUsuario(event)" style="display: none;">
                    <div style="margin-bottom: 1rem;">
                        <label style="display: block; margin-bottom: 0.5rem; color: var(--dark); font-weight: 500;">
                            <i class="fas fa-user" style="margin-right: 0.5rem; color: var(--primary);"></i>Nombre Completo *
                        </label>
                        <input type="text" name="nombre" required style="width: 100%; padding: 0.9rem; border: 2px solid #e0e0e0; border-radius: 10px; font-size: 1rem; transition: border-color 0.3s;" onfocus="this.style.borderColor='var(--primary)'" onblur="this.style.borderColor='#e0e0e0'">
                    </div>

                    <div style="margin-bottom: 1rem;">
                        <label style="display: block; margin-bottom: 0.5rem; color: var(--dark); font-weight: 500;">
                            <i class="fas fa-id-card" style="margin-right: 0.5rem; color: var(--primary);"></i>RUT/Cédula *
                        </label>
                        <input type="text" name="rut" required placeholder="12.345.678-9" style="width: 100%; padding: 0.9rem; border: 2px solid #e0e0e0; border-radius: 10px; font-size: 1rem; transition: border-color 0.3s;" onfocus="this.style.borderColor='var(--primary)'" onblur="this.style.borderColor='#e0e0e0'">
                    </div>

                    <div style="margin-bottom: 1rem;">
                        <label style="display: block; margin-bottom: 0.5rem; color: var(--dark); font-weight: 500;">
                            <i class="fas fa-envelope" style="margin-right: 0.5rem; color: var(--primary);"></i>Correo Electrónico *
                        </label>
                        <input type="email" name="email" required style="width: 100%; padding: 0.9rem; border: 2px solid #e0e0e0; border-radius: 10px; font-size: 1rem; transition: border-color 0.3s;" onfocus="this.style.borderColor='var(--primary)'" onblur="this.style.borderColor='#e0e0e0'">
                    </div>

                    <div style="margin-bottom: 1rem;">
                        <label style="display: block; margin-bottom: 0.5rem; color: var(--dark); font-weight: 500;">
                            <i class="fas fa-phone" style="margin-right: 0.5rem; color: var(--primary);"></i>Teléfono *
                        </label>
                        <input type="tel" name="telefono" required placeholder="+56 9 1234 5678" style="width: 100%; padding: 0.9rem; border: 2px solid #e0e0e0; border-radius: 10px; font-size: 1rem; transition: border-color 0.3s;" onfocus="this.style.borderColor='var(--primary)'" onblur="this.style.borderColor='#e0e0e0'">
                    </div>

                    <div style="margin-bottom: 1rem;">
                        <label style="display: block; margin-bottom: 0.5rem; color: var(--dark); font-weight: 500;">
                            <i class="fas fa-map-marker-alt" style="margin-right: 0.5rem; color: var(--primary);"></i>Dirección
                        </label>
                        <input type="text" name="direccion" placeholder="Calle, número, ciudad" style="width: 100%; padding: 0.9rem; border: 2px solid #e0e0e0; border-radius: 10px; font-size: 1rem; transition: border-color 0.3s;" onfocus="this.style.borderColor='var(--primary)'" onblur="this.style.borderColor='#e0e0e0'">
                    </div>

                    <div style="margin-bottom: 1rem;">
                        <label style="display: block; margin-bottom: 0.5rem; color: var(--dark); font-weight: 500;">
                            <i class="fas fa-lock" style="margin-right: 0.5rem; color: var(--primary);"></i>Contraseña *
                        </label>
                        <input type="password" name="password" required minlength="6" style="width: 100%; padding: 0.9rem; border: 2px solid #e0e0e0; border-radius: 10px; font-size: 1rem; transition: border-color 0.3s;" onfocus="this.style.borderColor='var(--primary)'" onblur="this.style.borderColor='#e0e0e0'">
                    </div>

                    <div style="margin-bottom: 1.5rem;">
                        <label style="display: block; margin-bottom: 0.5rem; color: var(--dark); font-weight: 500;">
                            <i class="fas fa-lock" style="margin-right: 0.5rem; color: var(--primary);"></i>Confirmar Contraseña *
                        </label>
                        <input type="password" name="confirmPassword" required minlength="6" style="width: 100%; padding: 0.9rem; border: 2px solid #e0e0e0; border-radius: 10px; font-size: 1rem; transition: border-color 0.3s;" onfocus="this.style.borderColor='var(--primary)'" onblur="this.style.borderColor='#e0e0e0'">
                    </div>

                    <div style="margin-bottom: 1.5rem;">
                        <label style="display: flex; align-items: start; gap: 0.5rem; cursor: pointer;">
                            <input type="checkbox" name="terminos" required style="margin-top: 0.3rem;">
                            <span style="color: #666; font-size: 0.9rem;">Acepto los términos y condiciones de Nexos</span>
                        </label>
                    </div>

                    <button type="submit" class="cta-button" style="width: 100%; padding: 1rem; font-size: 1.1rem; border: none;">
                        <i class="fas fa-user-plus" style="margin-right: 0.5rem;"></i>Crear Cuenta
                    </button>
                </form>
            </div>

            <!-- FORMULARIO DE EMPRESA -->
            <div id="formEmpresa" style="background: white; padding: 3rem; border-radius: 20px; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1); display: none;">
                <h3 style="color: var(--secondary); text-align: center; margin-bottom: 2rem; font-size: 1.8rem;">
                    <i class="fas fa-building" style="margin-right: 0.5rem;"></i>Inicio de Sesión - Empresa
                </h3>

                <!-- Tabs de Login/Registro -->
                <div style="display: flex; margin-bottom: 2rem; border-bottom: 2px solid #e0e0e0;">
                    <button onclick="cambiarTab('loginEmpresa')" id="tabLoginEmpresa" style="flex: 1; padding: 1rem; background: none; border: none; border-bottom: 3px solid var(--secondary); color: var(--secondary); font-weight: 600; cursor: pointer; transition: all 0.3s;">
                        Iniciar Sesión
                    </button>
                    <button onclick="cambiarTab('registroEmpresa')" id="tabRegistroEmpresa" style="flex: 1; padding: 1rem; background: none; border: none; border-bottom: 3px solid transparent; color: #666; font-weight: 600; cursor: pointer; transition: all 0.3s;">
                        Registrarse
                    </button>
                </div>

                <!-- Login Empresa -->
                <form id="loginEmpresaForm" onsubmit="iniciarSesionEmpresa(event)">
                    <div style="margin-bottom: 1.5rem;">
                        <label style="display: block; margin-bottom: 0.5rem; color: var(--dark); font-weight: 500;">
                            <i class="fas fa-envelope" style="margin-right: 0.5rem; color: var(--secondary);"></i>Correo Corporativo
                        </label>
                        <input type="email" required style="width: 100%; padding: 0.9rem; border: 2px solid #e0e0e0; border-radius: 10px; font-size: 1rem; transition: border-color 0.3s;" onfocus="this.style.borderColor='var(--secondary)'" onblur="this.style.borderColor='#e0e0e0'">
                    </div>

                    <div style="margin-bottom: 1.5rem;">
                        <label style="display: block; margin-bottom: 0.5rem; color: var(--dark); font-weight: 500;">
                            <i class="fas fa-lock" style="margin-right: 0.5rem; color: var(--secondary);"></i>Contraseña
                        </label>
                        <input type="password" required style="width: 100%; padding: 0.9rem; border: 2px solid #e0e0e0; border-radius: 10px; font-size: 1rem; transition: border-color 0.3s;" onfocus="this.style.borderColor='var(--secondary)'" onblur="this.style.borderColor='#e0e0e0'">
                    </div>

                    <div style="margin-bottom: 1.5rem; text-align: right;">
                        <a href="#" style="color: var(--secondary); text-decoration: none; font-size: 0.9rem;">¿Olvidaste tu contraseña?</a>
                    </div>

                    <button type="submit" class="cta-button" style="width: 100%; padding: 1rem; font-size: 1.1rem; border: none; background: var(--secondary);">
                        <i class="fas fa-sign-in-alt" style="margin-right: 0.5rem;"></i>Iniciar Sesión
                    </button>

                    <div style="margin-top: 1.5rem; text-align: center; padding-top: 1.5rem; border-top: 1px solid #e0e0e0;">
                        <p style="color: #666; font-size: 0.95rem; margin-bottom: 1rem;">¿No tienes cuenta empresarial?</p>
                        <a href="empresas.html" class="cta-button" style="display: inline-block; padding: 0.8rem 2rem; text-decoration: none; background: var(--accent);">
                            <i class="fas fa-building" style="margin-right: 0.5rem;"></i>Solicitar Registro Empresarial
                        </a>
                    </div>
                </form>

                <!-- Registro Empresa (Redirección) -->
                <div id="registroEmpresaForm" style="display: none; text-align: center; padding: 2rem 0;">
                    <i class="fas fa-info-circle" style="font-size: 4rem; color: var(--secondary); margin-bottom: 1.5rem;"></i>
                    <h4 style="color: var(--dark); margin-bottom: 1rem; font-size: 1.3rem;">Registro de Empresas</h4>
                    <p style="color: #666; margin-bottom: 2rem; line-height: 1.6;">
                        El registro de empresas y organizaciones requiere un proceso de verificación. Por favor, completa el formulario de solicitud en nuestra página de empresas.
                    </p>
                    <a href="empresas.html" class="cta-button" style="display: inline-block; padding: 1rem 2rem; text-decoration: none; background: var(--secondary);">
                        <i class="fas fa-arrow-right" style="margin-right: 0.5rem;"></i>Ir a Registro de Empresas
                    </a>
                </div>
            </div>

        </div>
    </section>

    <!-- Modal de Éxito -->
    <div id="modalExito" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.7); z-index: 1001; align-items: center; justify-content: center;">
        <div style="max-width: 450px; margin: 2rem; background: white; border-radius: 20px; padding: 3rem; text-align: center; animation: fadeInScale 0.3s ease-out;">
            <div id="iconoExito" style="width: 80px; height: 80px; background: var(--secondary); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem;">
                <i class="fas fa-check" style="font-size: 2.5rem; color: white;"></i>
            </div>
            <h2 id="tituloExito" style="color: var(--primary); margin-bottom: 1rem; font-size: 1.8rem;">¡Éxito!</h2>
            <p id="mensajeExito" style="color: #666; line-height: 1.6; margin-bottom: 2rem; font-size: 1.05rem;">
                Operación completada exitosamente.
            </p>
            <button onclick="cerrarModalExito()" class="cta-button" style="padding: 0.8rem 2rem; border: none;">
                Continuar
            </button>
        </div>
    </div>

    <style>
        @keyframes fadeInScale {
            from {
                opacity: 0;
                transform: scale(0.9);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }
    </style>

    <footer>
        <div class="footer-content">
            <div class="logo">
                <i class="fas fa-heart"></i>
                <span>Nexos</span>
            </div>
            <p>Conectando corazones con causas que transforman vidas</p>
            <div class="social-links">
                <a href="#"><i class="fab fa-facebook"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-linkedin"></i></a>
            </div>
            <p class="copyright">© 2025 Nexos. Todos los derechos reservados.</p>
        </div>
    </footer>

    <script>
        // Mostrar formulario según tipo de usuario
        function mostrarFormulario(tipo) {
            const formUsuario = document.getElementById('formUsuario');
            const formEmpresa = document.getElementById('formEmpresa');
            const btnUsuario = document.getElementById('btnUsuario');
            const btnEmpresa = document.getElementById('btnEmpresa');

            if (tipo === 'usuario') {
                formUsuario.style.display = 'block';
                formEmpresa.style.display = 'none';
                btnUsuario.style.background = 'var(--primary)';
                btnUsuario.style.color = 'white';
                btnEmpresa.style.background = 'white';
                btnEmpresa.style.color = 'var(--primary)';
            } else {
                formUsuario.style.display = 'none';
                formEmpresa.style.display = 'block';
                btnEmpresa.style.background = 'var(--secondary)';
                btnEmpresa.style.color = 'white';
                btnUsuario.style.background = 'white';
                btnUsuario.style.color = 'var(--primary)';
            }
        }

        // Cambiar entre tabs de login y registro
        function cambiarTab(tab) {
            if (tab === 'loginUsuario') {
                document.getElementById('loginUsuarioForm').style.display = 'block';
                document.getElementById('registroUsuarioForm').style.display = 'none';
                document.getElementById('tabLoginUsuario').style.borderBottomColor = 'var(--primary)';
                document.getElementById('tabLoginUsuario').style.color = 'var(--primary)';
                document.getElementById('tabRegistroUsuario').style.borderBottomColor = 'transparent';
                document.getElementById('tabRegistroUsuario').style.color = '#666';
            } else if (tab === 'registroUsuario') {
                document.getElementById('loginUsuarioForm').style.display = 'none';
                document.getElementById('registroUsuarioForm').style.display = 'block';
                document.getElementById('tabRegistroUsuario').style.borderBottomColor = 'var(--primary)';
                document.getElementById('tabRegistroUsuario').style.color = 'var(--primary)';
                document.getElementById('tabLoginUsuario').style.borderBottomColor = 'transparent';
                document.getElementById('tabLoginUsuario').style.color = '#666';
            } else if (tab === 'loginEmpresa') {
                document.getElementById('loginEmpresaForm').style.display = 'block';
                document.getElementById('registroEmpresaForm').style.display = 'none';
                document.getElementById('tabLoginEmpresa').style.borderBottomColor = 'var(--secondary)';
                document.getElementById('tabLoginEmpresa').style.color = 'var(--secondary)';
                document.getElementById('tabRegistroEmpresa').style.borderBottomColor = 'transparent';
                document.getElementById('tabRegistroEmpresa').style.color = '#666';
            } else if (tab === 'registroEmpresa') {
                document.getElementById('loginEmpresaForm').style.display = 'none';
                document.getElementById('registroEmpresaForm').style.display = 'block';
                document.getElementById('tabRegistroEmpresa').style.borderBottomColor = 'var(--secondary)';
                document.getElementById('tabRegistroEmpresa').style.color = 'var(--secondary)';
                document.getElementById('tabLoginEmpresa').style.borderBottomColor = 'transparent';
                document.getElementById('tabLoginEmpresa').style.color = '#666';
            }
        }

        // Iniciar sesión usuario
        function iniciarSesionUsuario(event) {
            event.preventDefault();
            // Aquí iría la lógica de autenticación con el backend
            console.log('Login usuario');
            
            // Mostrar modal de éxito
            mostrarModalExito(
                '¡Inicio de Sesión Exitoso!',
                'Bienvenido de nuevo. Serás redirigido a tu panel en un momento.',
                'var(--primary)'
            );
            
            // Redirigir después de 2 segundos
            setTimeout(() => {
                // window.location.href = 'index.html';
            }, 2000);
        }

        // Iniciar sesión empresa
        function iniciarSesionEmpresa(event) {
            event.preventDefault();
            // Aquí iría la lógica de autenticación con el backend
            console.log('Login empresa');
            
            // Mostrar modal de éxito
            mostrarModalExito(
                '¡Inicio de Sesión Exitoso!',
                'Bienvenido. Accediendo al panel empresarial...',
                'var(--secondary)'
            );
            
            // Redirigir después de 2 segundos
            setTimeout(() => {
                // window.location.href = 'dashboard-empresa.html';
            }, 2000);
        }

        // Registrar usuario
        function registrarUsuario(event) {
            event.preventDefault();
            const formData = new FormData(event.target);
            
            // Validar que las contraseñas coincidan
            const password = formData.get('password');
            const confirmPassword = formData.get('confirmPassword');
            
            if (password !== confirmPassword) {
                alert('Las contraseñas no coinciden');
                return;
            }

            // Aquí iría la lógica para enviar los datos al backend
            console.log('Registro usuario:', Object.fromEntries(formData));
            
            // Mostrar modal de éxito
            mostrarModalExito(
                '¡Registrado Correctamente!',
                'Tu cuenta ha sido creada exitosamente. Ahora puedes iniciar sesión.',
                'var(--primary)'
            );
            
            // Cambiar a la pestaña de login y limpiar formulario después de 2 segundos
            setTimeout(() => {
                cerrarModalExito();
                cambiarTab('loginUsuario');
                event.target.reset();
            }, 2500);
        }

        // Función para mostrar modal de éxito
        function mostrarModalExito(titulo, mensaje, color) {
            const modal = document.getElementById('modalExito');
            const icono = document.getElementById('iconoExito');
            const tituloElement = document.getElementById('tituloExito');
            const mensajeElement = document.getElementById('mensajeExito');
            
            // Actualizar contenido
            tituloElement.textContent = titulo;
            mensajeElement.textContent = mensaje;
            icono.style.background = color;
            
            // Mostrar modal
            modal.style.display = 'flex';
            document.body.style.overflow = 'hidden';
        }

        // Función para cerrar modal de éxito
        function cerrarModalExito() {
            document.getElementById('modalExito').style.display = 'none';
            document.body.style.overflow = 'auto';
        }
    </script>
</body>
</html>
